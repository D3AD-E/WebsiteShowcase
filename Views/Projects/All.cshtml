@model List<ProjectModel>

<main class="page projets-page">
    <section class="portfolio-block project-no-images">
        <div class="container">
            <div class="heading">
                <h2>All &nbsp;projects</h2>
            </div>
            <div class="row">
                @foreach (var project in Model)
                {
                    <div class="col-md-6 col-lg-4">
                        <div class="project-card-no-image">
                            <h3><strong>@project.Name<br></strong></h3>
                            <h4>@project.DescriptionShort<br></h4><a class="btn btn-outline-primary btn-sm" role="button" asp-controller="Projects" asp-action="Project" asp-route-id=@project.Id>See More</a>
                            <div class="tags"><a href="#">@project.LanguageTag</a></div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
</main>