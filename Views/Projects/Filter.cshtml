@model List<ProjectModel>
@{ 
    string languageTag = string.Empty;
    if (Model != null && Model.Count > 0)
    {
        languageTag = "Filtered by "+ Model[0].LanguageTag;
    }
    else
    {
        languageTag = "Nothing found";
    }
}
<main class="page projets-page">
    <section class="portfolio-block project-no-images">
        <div class="container">
            <a class="btn btn-outline-primary btn-sm" href="javascript:history.go(-1)">Back</a>
            <div class="heading">
                <h2>@languageTag</h2>
            </div>
            <div class="row">
                @foreach (var project in Model)
                {
                    <div class="col-md-6 col-lg-4">
                        <div class="project-card-no-image">
                            <h3><strong>@project.Name<br></strong></h3>
                            <h4>@project.DescriptionShort<br></h4><a class="btn btn-outline-primary btn-sm" role="button" asp-controller="Projects" asp-action="Project" asp-route-id=@project.Id>See More</a>
                            <div class="tags"><a asp-controller="Projects" asp-action="Filter" asp-route-language=@project.LanguageTag>@project.LanguageTag</a></div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
</main>