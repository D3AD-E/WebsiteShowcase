@model InputLoginModel

<body class="bg-gradient-primary mt-lg-5">
    <div class="container w-50 p-3">
        <div class="row justify-content-center">
            <div class="col-md-9 col-lg-12 col-xl-10">
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="p-5">
                                <div class="text-center">
                                    <h4 class="text-dark mb-4"><strong>ADMIN PANEL</strong></h4>
                                </div>
                                <form class="user" asp-action="Login">
                                    <div asp-validation-summary="All" class="text-danger"></div>
                                    <div class="form-group"><input class="form-control form-control-user" asp-for="Email" aria-describedby="emailHelp" placeholder="Enter Email Address..."></div>
                                    <div class="form-group"><input class="form-control form-control-user" asp-for="Password" placeholder="Password"></div>
                                    <div class="form-group">
                                        <div class="custom-control custom-checkbox small">
                                            <div class="form-check">
                                                <input class="form-check-input custom-control-input" asp-for="RememberMe">
                                                <label class="form-check-label custom-control-label">Remember Me</label>
                                            </div>
                                        </div>
                                    </div><button class="btn btn-primary btn-block text-white btn-user" type="submit">Log in</button>
                                    <hr>
                                </form>
                                <div class="text-center"><a class="small" href="forgot-password.html">Forgot Password?</a></div>
                                <div class="text-center"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
